@model TaskLoggerDotNet.Models.TaskLoggerModel

@{
    ViewBag.Title = "Delete Task";
}

<h2>Delete Task</h2>

<div>
    <h4>Are you sure you want to delete this task?</h4>
    <dl class="dl-horizontal">
        <dt>Description</dt>
        <dd>@Model.Description</dd>

        <dt>Date Done</dt>
        <dd>@Model.DateDone</dd>

        <dt>Total Hours</dt>
        <dd>@Model.TotalHours</dd>
    </dl>
</div>

@using (Html.BeginForm("DeleteConfirmed", "TaskLogger", FormMethod.Post, new { id = Model.Id }))
{
    <input type="submit" value="Delete" class="btn btn-danger" />
}
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
